<div class="container">

  <h3><%= @cocktail.name.capitalize %></h3>
  <%= link_to 'Back to all cocktails', cocktails_path %>

  <div class="row">
    <div class="col-md-6">
      <h4>Recipe</h4>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div class="col-md-6">
      <h4>Add a new dose</h4>
        <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

</div>
